#~exec --no-startup-id blueman-applet
# exec --no-startup-id blueman-applet &

# start xfce power manager
# exec --no-startup-id lxqt-powermanagement &

# kde make this work
# exec --no-startup-id indicator-kdeconnect &

# numlock on
# exec --no-startup-id numlockx &

# auto tiling because its cool
exec --no-startup-id autotiling-rs &

# launch the bar
exec_always --no-startup-id ~/.config/polybar/launch.sh

exec --no-startup-id ~/.scripts/lock.sh &
exec --no-startup-id xidlehook --not-when-audio --not-when-fullscreen --timer 120 "" 'betterlockscreen -l' &

# KEYBINDINGS -------------------------------------------------------
#                                                                   -
#--------------------------------------------------------------------

# exit reload restart or lock
bindsym $mod+Shift+r restart
bindsym $mod+Shift+w reload
bindsym $mod+shift+e exec "i3-nagbar -f DejaVu Sans Mono Book 12 -t warning -m 'Really, exit?' -b 'Yes' 'i3-msg exit'"

# bindsym $mod+Escape exec rofi -show power-menu -modi power-menu:rofi-power-menu
bindsym $mod+Escape exec betterlockscreen -l

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# set the gaps and adjust them when you want
gaps inner 20
gaps outer 5
gaps top 50
bindsym $mod+z		gaps outer current plus 5
bindsym $mod+Shift+z	gaps outer current minus 5

# TERMINAL STUFF ----------------------------------------------------
#                                                                   -
#--------------------------------------------------------------------

bindsym $mod+Return exec kitty

bindsym F1 exec kitty --class=floating_term
for_window [class="floating_term"] floating enable 
for_window [class="floating_term"] resize set 1200px 850px
for_window [class="floating_term"] border pixel 2

# LAUNCHERS AND MENUS -----------------------------------------------
#                                                                   -
#--------------------------------------------------------------------

bindsym F7 exec i3-dmenu-desktop --dmenu="dmenu -i -b -theme /home/duane/.config/rofi/dc-rofi/style-menu.rasi"
bindsym F6 exec dmenu-bluetooth -theme /home/duane/.config/rofi/dc-rofi/style-power.rasi
bindsym $mod+a exec rofi -show drun -theme /home/duane/.config/rofi/dc-rofi/style-menu.rasi
bindsym F5 exec networkmanager_dmenu -theme /home/duane/.config/rofi/dc-rofi/style-power.rasi
bindsym F4 exec rofi -show power-menu -theme /home/duane/.config/rofi/dc-rofi/style-power.rasi -modi power-menu:rofi-power-menu -width: 300

# Hide or show (toggle) the poly-bar

bindsym F8 exec polybar-msg cmd toggle &

# common apps keybinds screenshot etc
bindsym Print exec maim ~/Pictures/screenshots/$(date +%s).png
bindsym $alt+c exec gcolor3
bindsym $alt+x exec xupric
bindsym XF86HomePage exec google-chrome-beta
bindsym $alt+f exec nautilus
bindsym $alt+g exec geany
bindsym $alt+s exec spotify
bindsym $alt+p exec pithos
bindsym XF86Mail exec thunderbird
bindsym XF86Calculator exec gnome-calculator

# kill focused window
bindsym $mod+q kill

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout split
bindsym $mod+s layout toggle split

# toggle tiling / floating
bindsym $mod+space floating toggle

# Make the currently focused window a scratchpad
bindsym F2 move scratchpad

# Show the first scratchpad window
bindsym F3 scratchpad show

# change focus between tiling / floating windows
bindsym $mod+Shift+space focus mode_toggle

# switch to workspace
bindsym control+Right workspace next
bindsym control+Left workspace prev

# DEFINE NAMES FOR DEFAULT WORKSPACES -------------------------------
#                                                                   -
#--------------------------------------------------------------------

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"

#~# define what monitor workspace goes to
workspace 1 output DP1
workspace 2 output DP1
workspace 3 output DP1
workspace 4 output DP1
workspace 5 output DP1
workspace 6 output DP1
workspace 7 output DP1
workspace 8 output DP1

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt
        bindsym Return mode "default"
}

bindsym $mod+r mode "resize"

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

## music control
bindsym $mod+F2 exec playerctl next
bindsym $mod+F1 exec playerctl previous
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioStop exec --no-startup-id playerctl stop

# Get colors from Flavours ------------------------------------------
#                                                                   -
#--------------------------------------------------------------------

# Start flavours
## Base16 Light Mode
# Author: @duanecummins
#
# You can use these variables anywhere in the i3 configuration file.

set $base00 #191c20
set $base01 #2f3236
set $base02 #56615d
set $base03 #7d8c79
set $base04 #6D6251
set $base05 #eeeeee
set $base06 #a49d92
set $base07 #ebb16d
set $base08 #ffff66
set $base09 #ee6c3c
set $base0A #fd1f4a
set $base0B #917D5A
set $base0C #94c90f
set $base0D #3083dc
set $base0E #Cd3f45
set $base0F #7351fe

# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $base01 $base00 $base05 $base02 $base01
client.focused_inactive $base01 $base00 $base05 $base00 $base01
client.unfocused        $base01 $base00 $base05 $base00 $base01
client.urgent           $base08 $base08 $base05 $base08 $base08
client.placeholder      $base01 $base00 $base05 $base00 $base01
client.background       $base07

