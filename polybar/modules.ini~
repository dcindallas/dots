[module/updates]
type = custom/script
exec = ~/.config/polybar/scripts/updates.sh
tail = true
interval = 5
format = <label>
format-prefix = "  "
format-prefix-foreground = #1793d1
label-foreground = ${color.foreground}
label = "%output%"
click-left = kitty -e sudo pacman -Syu
label-padding = 0
format-prefix-font = 1
label-minlen = 8
label-alignment = center

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/date1]
type = internal/date
interval = 1.0
date = %a %B %d
time = %I:%M %p
date-alt = Its %A, %d %B %Y
time-alt = at %k:%M:%S
format = <label>
format-prefix = ""
format-prefix-foreground = ${color.base04}
format-prefix-font = 1
label = %date%
label-padding = 1
;;  _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

