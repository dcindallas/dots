[module/ewmh]
type = internal/xworkspaces
format-icon-font = 2
; Only show workspaces defined on the same output as the bar
; Default: false
pin-workspaces = false
; Create click handler used to focus desktop
; Default: true
enable-click = true
; Create scroll handlers used to cycle desktops
; Default: true
enable-scroll = true
icon-0 = "1;"
icon-1 = "2;"
icon-2 = "3;"
icon-3 = "4;"
icon-4 = "5;"
icon-5 = "6;"
icon-6 = "7;●"
icon-7 = "8;●"
icon-default = ""
format = <label-state>
label-monitor = %name%
label-active ="%icon%"
label-active-foreground = ${color.base0E}
label-occupied = %icon%
label-occupied-foreground = ${color.base02}
label-urgent = %icon%
label-urgent-foreground = ${color.base0B}
; Default: %icon%  %name%
label-empty = %icon%
label-empty-foreground = ${color.base01}
label-active-padding = 1
label-urgent-padding = 1
label-occupied-padding = 1
label-empty-padding = 1
;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

